<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEARCH FOR:"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/searchFor"
                android:textStyle="bold" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryColor="@color/my_accent"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="@color/secondary_text_default_material_light"
                android:inputType="text"
                android:hint="Results powered by setlist.fm"
                android:layout_below="@+id/searchFor"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/searchBar" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clear_search"
                android:layout_gravity="center_vertical|end"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:visibility="visible"
                android:layout_alignTop="@+id/searchBar"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ARTISTS"
                android:id="@+id/artistSelect"
                android:textColor="@color/my_accent"
                android:textStyle="bold"
                android:layout_above="@+id/searchBar"
                android:layout_toRightOf="@id/searchFor"
                android:layout_toEndOf="@id/searchFor"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOURS"
                android:id="@+id/tourSelect"
                android:layout_above="@+id/searchBar"
                android:layout_toRightOf="@id/artistSelect"
                android:layout_toEndOf="@id/artistSelect"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VENUES"
                android:id="@+id/venueSelect"
                android:layout_above="@+id/searchBar"
                android:layout_toRightOf="@id/tourSelect"
                android:layout_toEndOf="@id/tourSelect"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <!-- Suggestions card that displays recent searches if no query is entered,
     or search suggestions if a query is entered.-->
    <android.support.v7.widget.CardView
        android:id="@+id/suggestions"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="BEST MATCHES"
                android:textStyle="bold"
                android:id="@+id/suggestionText" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/suggestionList"
                android:layout_below="@id/suggestionText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
